{
  "scss.validate": false,
  "css.validate": true,
  "tailwindCSS.includeLanguages": {
    "plaintext": "html",
    "vue": "html",
    "vue-html": "html",
  },
  "stylelint.config": {
    "rules": {
      "at-rule-no-unknown": [true, {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "layer",
          "variants",
          "responsive",
          "screen"
        ]
      }],
      "declaration-block-trailing-semicolon": null,
      "no-descending-specificity": null
    }
  }
}