{
  "scss.validate": false,
  "css.validate": true,
  "tailwindCSS.includeLanguages": {
    "plaintext": "html",
    "vue": "html",
    "vue-html": "html"
  },
  "stylelint.config": {
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind",
            "apply",
            "layer",
            "variants",
            "responsive",
            "screen"
          ]
        }
      ],
      "declaration-block-trailing-semicolon": null,
      "no-descending-specificity": null
    }
  },
  "files.associations": {
    "**/.x-cmd/*": "shellscript"
  },
  "files.trimTrailingWhitespace": true,
  "editor.detectIndentation": true,
  "editor.tabSize": 4,
  "explicitFolding.rules": {
    "awk": [
      {
        "beginRegex": "^\\s*#\\s*Section:?",
        "endRegex": "^\\s*#\\s*EndSection",
        "autoFold": true
      }
    ],
    "scss": [
      {
        "beginRegex": "\\s*\\s*Section:?",
        "endRegex": "\\s*\\s*EndSection",
        "autoFold": true
      }
    ],
    "shellscript": [
      {
        "beginRegex": "^\\s*#\\s*Section:?",
        "endRegex": "^\\s*#\\s*EndSection",
        "autoFold": true
      }
    ]
  }
}
